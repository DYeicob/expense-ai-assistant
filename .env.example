# Application
APP_NAME=Expense AI Assistant
APP_VERSION=1.0.0
DEBUG=True
ENVIRONMENT=development

# API
API_HOST=0.0.0.0
API_PORT=8000
API_RELOAD=True

# Database
DATABASE_URL=sqlite:///./data/database/expenses.db
# For PostgreSQL in production:
# DATABASE_URL=postgresql://user:password@localhost:5432/expenses_db

# Security
SECRET_KEY=your-secret-key-here-change-in-production
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# OCR Settings
OCR_ENGINE=easyocr
OCR_LANGUAGES=["en", "es"]
TESSERACT_PATH=/usr/bin/tesseract

# ML Models
CLASSIFIER_MODEL_PATH=backend/ml/saved_models/classifier.pkl
PREDICTOR_MODEL_PATH=backend/ml/saved_models/predictor.pkl
MIN_CONFIDENCE_THRESHOLD=0.7

# File Upload
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_EXTENSIONS=["jpg", "jpeg", "png", "pdf"]
UPLOAD_DIR=data/raw

# Frontend
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost

# Logging
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
